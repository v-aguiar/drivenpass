// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Users {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  password     String
  Sessions     Sessions[]
  Credentials  Credentials[]
  SafeNotes    SafeNotes[]
  Cards        Cards[]
  WifiNetworks WifiNetworks[]
}

model Sessions {
  id      Int   @id @default(autoincrement())
  session Users @relation(fields: [userId], references: [id])
  userId  Int
}

model Credentials {
  id         Int    @id @default(autoincrement())
  url        String
  login      String
  password   String
  label      String
  credential Users  @relation(fields: [userId], references: [id])
  userId     Int
}

model SafeNotes {
  id       Int    @id @default(autoincrement())
  title    String
  note     String
  safeNote Users  @relation(fields: [userId], references: [id])
  userId   Int
}

model Cards {
  id             Int      @id @default(autoincrement())
  cardNumber     String
  cardholderName String
  securityCode   String
  cardPassword   String
  isVirtual      Boolean
  cardType       CardType
  label          String
  card           Users    @relation(fields: [userId], references: [id])
  userId         Int
}

model WifiNetworks {
  id           Int    @id @default(autoincrement())
  wifiName     String
  wifiPassword String
  label        String
  wifi         Users  @relation(fields: [userId], references: [id])
  userId       Int
}

enum CardType {
  credit
  debit
  both
}
